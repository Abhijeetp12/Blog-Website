
  <%- include("partials/header.ejs")  %>

  <div class="b-example-divider"></div>

  <% if(signal === 'editpost'){ %>
  <form action="/edit/<%=blog.id%>" method="post">
  <div class="row mx-2">
    <label for="exampleFormControlInput" class="form-label">Full Name</label>
      <div class="col">
        <input type="text" name="fname" class="form-control" value="<%=blog.authorfname %>">
      </div>
      <div class="col">
        <input type="text" name="lname" class="form-control" value="<%=blog.authorlname%>">
      </div>
    </div>

  <div class="mb-3 mt-3 mx-3">
      <label for="exampleFormControlInput1" class="form-label">Title</label>
      <input type="text" name="title" class="form-control" id="exampleFormControlInput1" value="<%=blog.title%>">
    </div>

    <div class="mb-3 mx-3">
      <label for="exampleFormControlTextarea1" class="form-label">Content</label>
      <textarea class="form-control" name="content" id="exampleFormControlTextarea1" rows="10"><%=blog.content%></textarea>
    </div>
    <button class="btn btn-primary" type="submit" style="margin-left: 20px; margin-bottom: 30px;">update</button>
  </form>
  <% } else if(signal === 'createpost') {%>

    <form action="/submit" method="post">
    <div class="row mx-2">
      <label for="exampleFormControlInput" class="form-label">Full Name</label>
        <div class="col">
          <input type="text" name="fname" class="form-control" placeholder="First name" aria-label="First name">
        </div>
        <div class="col">
          <input type="text" name="lname" class="form-control" placeholder="Last name" aria-label="Last name">
        </div>
      </div>
    <div class="mb-3 mt-3 mx-3">
        <label for="exampleFormControlInput1" class="form-label">Title</label>
        <input type="text" name="title" class="form-control" id="exampleFormControlInput1" placeholder="Title...">
      </div>    
      <div class="mb-3 mx-3">
        <label for="exampleFormControlTextarea1" class="form-label">Content</label>
        <textarea class="form-control" name="content" id="exampleFormControlTextarea1" rows="10"></textarea>
      </div>

      <button class="btn btn-primary" type="submit" style="margin-left: 20px; margin-bottom: 30px;">Submit</button>
    </form>
    <% }  %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>